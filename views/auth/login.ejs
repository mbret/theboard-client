<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <div>
            <h1 class="logo-name">The Board</h1>
        </div>
        <%- __('i18n_login_welcome_text') %>
        <form class="m-t" role="form" id="form-login" action="#" method="post">
            <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="<%= __('i18n_Email') %>" required="">
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="<%= __('i18n_Password') %>" required="">
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b-sm"><%= __('i18n_Login') %></button>

            <div class="row m-b-sm social-line">
                <div class="col-xs-5"><hr></div>
                <div class="col-xs-2 text-center"><div class="m-t-sm">Or</div></div>
                <div class="col-xs-5"><hr></div>
            </div>

            <a href="/auth/<%= providers.facebook.token %>" class="btn btn-success btn-facebook full-width m-b" title="Facebook"><i class="fa fa-facebook"> </i> Sign in with Facebook</a>
            <div class="row m-b">
                <div class="col-xs-4 text-right"><div class="m-t-xs">Or</div></div>
                <div class="col-xs-8 text-left">
                    <a href="/auth/<%= providers.google.token %>" class="btn btn-danger btn-google" title="Google"><i class="fa fa-google"></i></a>
                    <a href="/auth/<%= providers.github.token %>" class="btn btn-white btn-github" title="Github"><i class="fa fa-github"></i></a>
                    <a href="/auth/<%= providers.twitter.token %>" class="btn btn-success btn-twitter" title="Twitter"><i class="fa fa-twitter"></i></a>
                </div>
            </div>

            <a href="#"><small>Forgot password?</small></a>
            <p class="text-muted text-center"><small>Do not have an account?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="<%= helper.getUrl(sails.config.urls.signup) %>">Create an account</a>
        </form>
        <p class="m-t"> <small><%= copy %></small> </p>
    </div>
</div>
