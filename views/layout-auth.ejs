<!DOCTYPE html>
<html>
  <head>

      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title><%= title %></title>

      <link href="/styles/plugins/bootstrap.min.css" rel="stylesheet">
      <link href="/styles/plugins/font-awesome/css/font-awesome.css" rel="stylesheet">
      <link href="/styles/plugins/animate.css" rel="stylesheet">
      <link href="/styles/plugins/iCheck/custom.css" rel="stylesheet">
      <link href="/styles/plugins/toastr/toastr.min.css" rel="stylesheet">
      <link href="/styles/style.theme.css" rel="stylesheet">
      <link href="/styles/style.css" rel="stylesheet">

  </head>

<body class="gray-bg">

    <% if ( typeof errors != 'undefined' && errors) {%>
        <% errors.forEach(function (error) { %>
            <div class="hidden notification" data-type="error"><%= __(error) %></div>
        <% }) %>
    <% } %>
    <% if ( typeof successes != 'undefined' && successes) {%>
        <% successes.forEach(function (success) { %>
            <div class="hidden notification" data-type="success"><%= __(success) %></div>
        <% }) %>
    <% } %>

    <%- body %>

    <!-- Mainly scripts -->
    <script src="/js/dependencies/jquery/jquery-2.1.1.min.js"></script>
    <script src="/js/dependencies/bootstrap/bootstrap.min.js"></script>

    <!-- iCheck -->
    <script src="/js/dependencies/iCheck/icheck.min.js"></script>

    <!-- toastr (plugin for notifications -->
    <script src="/js/dependencies/toastr/toastr.min.js"></script>

    <script src="/js/dependencies/jquery-ui/jquery-ui.min.js"></script>

    <!-- Jquery Validate -->
    <script src="/js/dependencies/validate/jquery.validate.min.js"></script>

    <!-- App script -->
    <script src="/js/script.auth.js"></script>

</body>

</html>
